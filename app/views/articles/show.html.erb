<h2><%= @article.title %></h2>
<p>
  <%= @article.text %>
</p>

<p>
  <%= form_for([ @article, @article.comments.build ]) do |f| %>
  <p>
    <%= f.label :auther %><br>
    <%= f.text_field :auther %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Comment' %>
  </p>
  <% end %>
</p>
